<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>{{ title }}</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    />
    <style>
      body {
        padding: 2rem;
        background-color: #f7f7f9;
      }
      .badge-status-OK {
        background-color: #198754;
      }
      .badge-status-SOBRANTE {
        background-color: #0d6efd;
      }
      .badge-status-FALTANTE {
        background-color: #dc3545;
      }
      .thumbnail-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 1rem;
      }
      .thumbnail-grid img {
        width: 100%;
        border-radius: 0.5rem;
        border: 1px solid #dee2e6;
      }
    </style>
  </head>
  <body>
    <header class="mb-5">
      <h1 class="display-5">{{ title }}</h1>
      {% if company_name %}
      <p class="lead">Empresa: {{ company_name }}</p>
      {% endif %}
      <p class="text-muted">Informe generado automáticamente por WALDO Audit MVP.</p>
    </header>

    <section class="mb-5">
      <h2>Resumen Ejecutivo</h2>
      <div class="row">
        <div class="col-md-4">
          <div class="card shadow-sm mb-3">
            <div class="card-body">
              <h5 class="card-title">Activos declarados</h5>
              <p class="display-6">{{ total_declared }}</p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card shadow-sm mb-3">
            <div class="card-body">
              <h5 class="card-title">Activos detectados</h5>
              <p class="display-6">{{ total_detected }}</p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card shadow-sm mb-3">
            <div class="card-body">
              <h5 class="card-title">Estados por obra</h5>
              {% if summary %}
              <ul class="list-unstyled mb-0">
                {% for item in summary %}
                <li>
                  <span class="badge badge-status-{{ item.status }}">{{ item.status }}</span>
                  {{ item.site }} ({{ item.count }})
                </li>
                {% endfor %}
              </ul>
              {% else %}
              <p class="text-muted">Sin datos disponibles.</p>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="mb-5">
      <h2>Conciliación por activo</h2>
      <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
          <thead class="table-dark">
            <tr>
              <th>Obra</th>
              <th>Clase</th>
              <th>Declarado</th>
              <th>Detectado</th>
              <th>Diferencia</th>
              <th>Estado</th>
            </tr>
          </thead>
          <tbody>
            {% if reconciliation %}
            {% for item in reconciliation %}
            <tr>
              <td>{{ item.site }}</td>
              <td>{{ item.class }}</td>
              <td>{{ item.declared_quantity }}</td>
              <td>{{ item.detected_quantity }}</td>
              <td>{{ item.difference }}</td>
              <td>
                <span class="badge badge-status-{{ item.status }}">{{ item.status }}</span>
              </td>
            </tr>
            {% endfor %}
            {% else %}
            <tr>
              <td colspan="6" class="text-center text-muted">Sin datos de conciliación.</td>
            </tr>
            {% endif %}
          </tbody>
        </table>
      </div>
    </section>

    <section class="mb-5">
      <h2>Mapa de obras</h2>
      {% if map_html %}
      <div class="ratio ratio-16x9">
        <iframe srcdoc='{{ map_html | replace("'", "&#39;") }}' title="Mapa de obras"></iframe>
      </div>
      {% else %}
      <p class="text-muted">No se pudo generar el mapa (ver registros).</p>
      {% endif %}
    </section>

    <section class="mb-5">
      <h2>Galería de evidencias</h2>
      {% if detections %}
      <div class="thumbnail-grid">
        {% for det in detections if det.thumbnail_path %}
        <div>
          <img src="{{ det.thumbnail_path }}" alt="{{ det.class }}" />
          <small class="text-muted d-block mt-1">
            {{ det.site }} – {{ det.class }} (conf: {{ '%.2f'|format(det.confidence) }})
          </small>
        </div>
        {% endfor %}
      </div>
      {% else %}
      <p class="text-muted">No hay detecciones para mostrar.</p>
      {% endif %}
    </section>
  </body>
</html>
